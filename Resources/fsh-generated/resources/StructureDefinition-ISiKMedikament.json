  "name": "ISiKMedikament",
  "status": "active",
  "experimental": false,
  "date": "2024-10-23",
  "publisher": "gematik GmbH",
  "description": "Dieses Profil ermöglicht die Abbildung von patientenunabhängigen Informationen zu Medikamenten in ISiK Szenarien.",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Medication",
