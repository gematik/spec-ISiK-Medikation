        "mustSupport": true
      },
      {
        "id": "Medication.manufacturer.display",
        "path": "Medication.manufacturer.display",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Medication.form",
        "path": "Medication.form",
        "short": "Abgabeform",
        "mustSupport": true
      },
      {
        "id": "Medication.form.coding",
        "path": "Medication.form.coding",
        "slicing": {
          "discriminator": [
            {
              "type": "pattern",
              "path": "$this"
